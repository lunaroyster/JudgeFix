<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JudgeFix"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black" Opacity="0.8" AllowsTransparency="True" WindowStyle="None" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF222222" />
            <Setter Property="Foreground" Value="#FFEEEEEE" />
        </Style>
    </Window.Resources>



    <Grid Margin="0,10,10,0" RenderTransformOrigin="-4.175,-2.211" HorizontalAlignment="Right" VerticalAlignment="Top" Width="780" Height="430">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="593*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="b_setting" HorizontalAlignment="Left" Width="43" Grid.Column="1">
            <Image x:Name="image" Height="33" Width="33"/>
        </Button>
        <Button x:Name="b_minimize" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Top" Width="43" Height="43" Grid.Column="1"/>
        <Button x:Name="b_minimize_Copy" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Top" Width="43" Height="43" Grid.Column="1"/>
        <Button x:Name="b_close" HorizontalAlignment="Left" Margin="144,0,0,0" VerticalAlignment="Top" Width="43" Height="43" Grid.Column="1"/>
        <StackPanel Grid.RowSpan="2" Grid.Column="1" ForceCursor="True" Grid.Row="1" Grid.IsSharedSizeScope="True"/>

    </Grid>

</Window>

